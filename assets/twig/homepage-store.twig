{% extends "page.twig" %}


{% block body %}

	<div class="row">
		<div class="col-sm-6">
			{% if description %}
				<h2 class="no-margin-top">About {{ shortName }}</h2>
				<div>
					{{ description }}
				</div>	
			{% endif %}

			{% if license %}
				<h2>License details</h2>
				<div>
					<a href="{{ license.url }}">{{ license.name }}</a>
				</div>
			{% endif %}

			{% if contact %}
				<h2>Contact details</h2>
				<div>
					<strong>{{ contact.name }}</strong>
					<ul class="list-unstyled">
						{% for label, value in contact %}
							{% if label != "name" %}
								{% if label == "email" %}
										<li>{{ label|capitalize }}: <a href="mailto:{{ value }}">{{ value }}</a></li>
								{% else %}
									<li>{{ label|capitalize }}: {{ value }}</li>
								{% endif %}
							{% endif %}
						{% endfor %}
					</ul>
				</div>
			{% endif %}
		</div>

		<div class="col-md-6">

			<div class="clearfix">
				<div class="pull-right form-inline">
					<div class="input-group">
						<input type="search" class="form-control" id="store-search" placeholder="Search">
						<span class="input-group-btn">
							<button class="btn btn-primary" id="store-search_button" type="button"><span class="glyphicon glyphicon-search"></span></button>
						</span>
					</div>
				</div>
			</div>

			<script type="text/javascript">
				window.addEventListener("load", function(){
					var urlBase = "/datasets/{{ slug }}/search/";

					var search = function(){
						var input = $("#store-search"),
							val = input.val().trim(),
							url = urlBase + val;
						if(val !=== ""){
							window.location = url;
						}
					};

					$("#store-search_button").on("click", function(e){
						e.preventDefault();
						search();
					});
					$("#store-search").on("keypress", function(e){
						if(event.which === 13){
							e.preventDefault();
							search();
						}
					});

				});
			</script>

			<div class="panel panel-default" style="margin-top: 20px;">
				<div class="panel-heading">
					<span class="glyphicon glyphicon-stats"></span>
					Dataset statistics
				</div>

			    <table class="table table-hover">
			    	<tbody>
			    		{% for name, value in statistics %}
			    			<tr>
			    				<td id="{{ name }}">{{ name }}</td>
			    				<td>{{ value }}</td>
			    			</tr>
			    		{% endfor %}
			    	</tbody>
			    </table>
			</div>
		</div>

	</div>

{% endblock %}
